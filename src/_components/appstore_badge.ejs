<a href="<%= site.appAppleStore %>" target="_blank" rel="noopener" aria-label="<%= lang[locale].appstoreImageAlt %>  <%= lang[locale].externalLinkWarning%>">
    <picture>
        <source type="image/webp"
                srcset="/images/badges/appstore_us@1x.webp 1x,
                        /images/badges/appstore_us@2x.webp 2x,
                        /images/badges/appstore_us@3x.webp 3x">
        <img srcset="/images/badges/appstore_us@3x.png 3x,
                    /images/badges/appstore_us@2x.png 2x,
                    /images/badges/appstore_us@1x.png 1x"
             alt="<%= lang[locale].appstoreImageAlt %>"
             src="/images/badges/appstore_us@1x.png"
             width="144"
             height="48">
    </picture>
</a>
